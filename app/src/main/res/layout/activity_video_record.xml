<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">
        <SurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:paddingTop="12.0dip">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/button_capture_return_normal"
                android:layout_alignParentLeft="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <CheckBox
                    android:id="@+id/cb_photoflash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:button="@drawable/bg_photoflash_selector"/>
                <CheckBox
                    android:id="@+id/cb_swithc_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:button="@drawable/bg_switch_camera_selector"/>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_video_quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14.0sp"
            android:textColor="@android:color/white"
            android:layout_margin="10.0dip"
            android:layout_gravity="end|bottom"
            android:text=""/>

        <TextView
            android:id="@+id/tv_record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:textSize="12.0sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="2.0dip"
            android:text="00:00:00"/>
    </FrameLayout>
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/record_progress"
        android:layout_width="fill_parent"
        android:layout_height="5.0dip"
        android:max="100"
        android:progress="0"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:padding="30.0dip">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/button_stop_capture_normal"
                android:visibility="gone"/>
            <Button
                android:id="@+id/bt_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_record_selector"
                android:text="录制"
                android:layout_marginLeft="40.0dip"
                android:layout_marginRight="40.0dip"/>
            <ImageView
                android:id="@+id/iv_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/button_capture_finish_normal"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>